                    <hr>
                </section>
                <aside>
                        <form>
                            Waga: <br>
                            <input type="text" id="waga"><br>
                            Wzrost:<br>
                            <input type="text" id="wzrost"><br>
                            <input type="button" onClick="bmi()" value="Oblicz BMI">
                        </form>
                        <p id="wskaznik"></p>
                        <p id="kat"></p>
                </aside>
